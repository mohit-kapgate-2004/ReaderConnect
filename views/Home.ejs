        .info-list {
            list-style: none;
            margin-bottom: 25px;
        }

        .info-list li {
            position: relative;
            padding-left: 25px;
            margin-bottom: 12px;
            color: #333;
            font-size: 17px;
        }

        .info-list li::before {
            content: "➔";
            position: absolute;
            left: 0;
            color: #1a73e8;
        }

        /* Subheading */
        .subheading {
            font-size: 22px;
            color: #1a73e8;
            text-align: center;
            margin-bottom: 25px;
        }

        /* Emoji in Heading */
        .lightbulb {
            font-size: 22px;
        }

        /* Image Styling */
        .card-image {
            display: block;
            max-width: 100%;
            height: auto;
            margin: 0 auto;
            border-radius: 6px;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .wrapper {
                flex-direction: column;
            }

            .card {
                margin-bottom: 25px;
            }
        }
