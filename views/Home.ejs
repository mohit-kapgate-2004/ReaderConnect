  }

  .text {
    color: #e6f0fa; /* Light pale blue that contrasts with #1e3a5f */
    text-shadow: 0 0 5px rgba(255, 255, 255, 0.3);
    font-weight: bold;
  }

  .switch {
    width: 40px;
    height: 20px;
    background: #ffffff;
    border-radius: 10px;
    position: relative;
    overflow: hidden;
    box-shadow: 0 0 10px rgba(255, 255, 255, 0.2);
  }

  .icon {
    width: 18px;
    height: 18px;
    background-color: #1e3a5f;
     color: #1e3a5f; 
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 2px;
    position: absolute;
    top: 1px;
    left: 1px;
    animation: slide 1s infinite alternate;
