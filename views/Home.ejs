        /* Home_page.css */
/* General Styles */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #D1E3FF;
    text-align: center;
    box-sizing: border-box;
}

/* Navigation Bar */
.navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #1e3a5f;
    padding: 10px 20px;
    color: white;
    height: 60px;
}

.navbar .logo {
    font-size: 30px;
    font-weight: bold;
}

.navbar .searchbar {
    display: flex;
    align-items: center;
}

.navbar .searchbar input {
    padding: 5px;
    width: 20vw;
    height: 40px;
    border: none;
    border-radius: 3px;
    margin-right: 10px;
}

.navbar .searchbar button {
    padding: 5px 10px;
    border: 0.5px solid black;
    height: 40px;
    border-radius: 3px;
    background-color: #0458e1;
    color: white;
    cursor: pointer;
}

.navbar .nav-links {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
}

.navbar .nav-links li {
    margin-left: 20px;
}

.navbar .nav-links a {
    color: white;
    text-decoration: none;
    font-size: 16px;
}

.navbar .nav-links a:hover {
    text-decoration: underline;
}

.profile-icon {
    width: 35px;
    height: 35px;
    border-radius: 50%;
    object-fit: cover;
}

/* Profile Dropdown */
#profile_home {
    margin-right: 30px;
    position: relative;
    display: inline-block;
    cursor: pointer;
}

.profile-icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
    margin-left: 25px;
}

.dropdown-menu {
    display: none;
    position: absolute;
    right: 0;
    background: white;
    min-width: 180px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    border-radius: 5px;
    overflow: hidden;
    z-index: 100;
}

.dropdown-menu a {
    display: block;
    padding: 10px;
    text-decoration: none;
    color: #333;
    transition: background 0.3s;
}

.dropdown-menu a:hover {
    background: #f0f0f0;
}

#profile_home:hover .dropdown-menu {
    display: block;
}

/* Main Content */
.homepage-intro {
    margin-top: 80px;
    padding: 20px;
    text-align: center;
}

.homepage-intro p {
    font-size: 1.2rem;
    color: #555;
}

/* Buttons in homepage-intro */
.btns {
    display: flex;
    justify-content: center;
    gap: 20px;
}

.reqdonbtns {
    background-color: #1e3a5f;
    color: white;
    width: 100px;
    height: 45px;
    border-radius: 5px;
    border: none;
    cursor: pointer;
    transition: background 0.3s;
}

.reqdonbtns:hover {
    background-color: #1279da;
}

.book-container {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
}

.book {
    background: white;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 15px;
    width: 200px;
    text-align: center;
    transition: transform 0.3s ease;
}

.book:hover {
    transform: translateY(-5px);
}
.book button {
    padding: 8px 16px;
    background: #1e3a5f;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 0.9rem;
    transition: background 0.3s ease;
}

.book button:hover {
    background: #87b5e0;
}
.book img {
    width: 100%;
    height: 150px;
    object-fit: contain;
    border-radius: 5px;
    margin-bottom: 10px;
}

.book-title {
    font-size: 1.2rem;
    color: #333;
    margin-bottom: 5px;
}

.book p {
    margin: 5px 0;
    color: #666;
}

/* Availability Styling */
.availability.not-available {
    color: red;
    font-weight: bold;
}

.extra-content {
    padding: 20px;
    text-align: center;
}

.extra-content h3 {
    font-size: 1.5rem;
    margin-bottom: 10px;
}

.extra-content p {
    font-size: 1.1rem;
    color: #555;
}


/* About Us Section */
.about-section {
    padding: 40px 20px;
    text-align: left;
}

.about-section h2 {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 20px;
}

.about-content {
    display: flex;
    align-items: center;
    gap: 20px;
    max-width: 1200px;
    margin: 0 auto;
}

.about-text {
    flex: 1;
}

.about-text p {
    font-size: 1.1rem;
    color: #555;
    margin-bottom: 20px;
}

.read-more-btn {
    background-color: #1e3a5f;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background 0.3s;
}

.read-more-btn:hover {
    background-color: #87b5e0;
}

.about-image {
    flex: 1;
}

.about-image img {
    width: 100%;
    height: 300px;
    object-fit: cover;
    border-radius: 10px;
}

/* Testimonials Slider */
.testimonials-section {
    padding: 40px 20px;
    background: #f9f9f9;
}

.testimonials-section h2 {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 20px;
}

.slider-container {
    max-width: 1000px;
    margin: 0 auto;
    position: relative;
    overflow: hidden;
}

.slides {
    display: flex;
    transition: transform 0.5s ease-in-out;
    width: 100%;
}

.slide {
    min-width: 100%;
    flex-shrink: 0;
}

.testimonial {
    background: white;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    text-align: center;
}

.testimonial img {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    margin-bottom: 10px;
}

.testimonial h4 {
    font-size: 1.2rem;
    margin-bottom: 5px;
}

.rating {
    color: #f1c40f;
    margin-bottom: 10px;
}

.testimonial p {
    font-size: 1rem;
    color: #555;
}

.slider-nav {
    position: absolute;
    top: 50%;
    width: 100%;
    display: flex;
    justify-content: space-between;
    transform: translateY(-50%);
    padding: 0 10px;
}

.slider-nav button {
    background: #1e3a5f;
    border: none;
    color: white;
    font-size: 18px;
    padding: 10px;
    cursor: pointer;
    border-radius: 5px;
    transition: background 0.3s;
}

.slider-nav button:hover {
    background: #87b5e0;
}

/* Contact Us Section */
.contact-section {
    padding: 40px 20px;
    background: #1e3a5f;
    color: white;
}

.contact-section h2 {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 20px;
}

.contact-form {
    max-width: 500px;
    margin: 0 auto 40px;
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.contact-form input,
.contact-form textarea {
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 1rem;
}

.contact-form textarea {
    height: 150px;
    resize: none;
}

.contact-form button {
    background: #0458e1;
    color: white;
    padding: 10px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background 0.3s;
}

.contact-form button:hover {
    background: #87b5e0;
}

.get-in-touch {
    text-align: center;
}

.get-in-touch h3 {
    font-size: 1.5rem;
    margin-bottom: 20px;
}

.contact-info {
    display: flex;
    justify-content: center;
    gap: 40px;
    margin-bottom: 20px;
}

.info-item {
    display: flex;
    align-items: center;
    gap: 10px;
}

.info-item i {
    font-size: 1.5rem;
}

.info-item p {
    font-size: 1rem;
}

.get-in-touch h4 {
    font-size: 1.2rem;
    margin-bottom: 10px;
}

.social-icons {
    display: flex;
    justify-content: center;
    gap: 20px;
    font-size: 1.5rem;
}

.social-icons a {
    color: white;
    transition: color 0.3s;
}

.social-icons a:hover {
    color: #87b5e0;
}

/* Footer */
.site-footer {
    background: #1e3a5f;
    color: white;
    padding: 1rem 0;
    text-align: center;
}

.footer-bottom p {
    font-size: 0.9rem;
}

/* Responsive Design */
@media (max-width: 768px) {
    .navbar {
        flex-direction: column;
        height: auto;
        padding: 10px;
    }

    .navbar .searchbar {
        width: 100%;
        margin: 10px 0;
    }

    .navbar .searchbar input {
        width: 100%;
    }

    .navbar .nav-links {
        flex-direction: column;
        align-items: center;
    }

    .navbar .nav-links li {
        margin: 5px 0;
    }

    .about-content {
        flex-direction: column;
    }

    .contact-info {
        flex-direction: column;
        gap: 20px;
    }
}
.title {
    font-size: 24px;
    display: flex;
    align-items: center;
    gap: 8px;
    text-transform: uppercase;
    letter-spacing: 1px;
